// problem 3 leetcode

class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        
        unordered_map<char,int> checker;
        int maxLen = 0;
        int left = 0;

        for(int right = 0; right < s.length(); right++){
            char k = s[right];

            if(checker.count(k) && checker[k] >= left){
                left = checker[k] + 1;
            }
            checker[k] = right;

            maxLen = max(maxLen, right - left + 1);
        }
        return maxLen;
    }
};
